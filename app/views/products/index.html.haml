            .items-box
              = link_to do
                %figure.items-box__photo
                  = image_tag "https://static-mercari-jp-imgtr2.akamaized.net/thumb/photos/m71763423568_1.jpg?1538061971"
                .items-box__body
                  %h3.items-box__name
                    ミッシュマッシュ今期ハギフレアカラースカート
                  .items-box__num
                    .items-box__price
                      ¥ 1,888
                    .items-box__likes
                      = fa_icon "heart"
                      %span 4
                    %p.items-box__tax (税込)
          .view-all
