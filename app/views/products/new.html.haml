.single-container
  = render 'shared/single_header'

  .single-main
    .single-panel
      .single-panel__sign-up
        %h2 商品の情報を入力

      = form_with model: @product, url: products_path, local: true do |f|
        .sell-form
          .sell-upload-box
            %h3.sell-upload-box__head
              出品画像
              %span.form-require 必須
            %p 最大4枚まで画像をアップロードできます。
            = f.fields_for :images do |c|
              .sell-dropbox-container
                .sell-dropbox-container-main
                  = c.file_field :image

                / = c.label :image, class: "sell-upload-drop-box",id: "product_images_image" do
                /   .visible-pc
                /     ドラッグアンドドロップ
                /     %br またはクリックしてファイルをアップロード
                /   / = c.file_field :image, class: "hidden"
                /   = c.file_field :image, class: "hidden"


        .sell-content
          .form-group#first
            = f.label :name, "商品名"
            %span.form-require 必須
            = f.text_field :name, class: "input-default input-with-margin",placeholder: "商品名（必須 40文字まで)"
          .form-group
            = f.label :detail, "商品の説明"
            %span.form-require 必須
            = f.text_area :detail, class: "textarea-default input-with-margin",placeholder: "商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。"

        .sell-content
          %h3.sell-content__head 商品の詳細
          .sell-content__formbox
            .form-group#first
              %label{ for: 'name' } カテゴリー
              %span.form-require 必須
              %br
              .select-wrap
                = f.select :large_category_id, @large_category.map{|o| [o.genre, o.id]},{prompt:"---"},{class: "select-default"}
                = fa_icon "chevron-down", class: "icon-chevron-down"
            .form-group.sub-category#middle-category
              .select-wrap
                = f.select :middle_category_id, @middle_category.map{|o| [o.genre, o.id]},{prompt:"---"},{class: "select-default select-middle"}
                = fa_icon "chevron-down", class: "icon-chevron-down "
            .form-group.sub-category#small-category
              .select-wrap
                = f.select :small_category_id, @middle_category.map{|o| [o.genre, o.id]},{prompt:"---"},{class: "select-default select-small"}
                = fa_icon "chevron-down", class: "icon-chevron-down "
            .form-group#size-form
              = f.label :size, "サイズ"
              %span.form-require 必須
              %br
              .select-wrap
                = f.select :size,size_list, {prompt: "---"},{class: "select-default"}
                = fa_icon "chevron-down", class: "icon-chevron-down"
            .form-group#brand-form
              = f.label :brand, "ブランド"
              %span.form-arbitrary 任意
              = f.text_field :brand, class: "input-default input-with-margin brand-field",placeholder: "例）シャネル"
              %ul.sell-brand-suggest
            .form-group
              %label{ for: 'name' } 商品の状態
              %span.form-require 必須
              %br
              .select-wrap
                = f.select :condition,condition_list, {prompt: "---"},{class: "select-default"}
                = fa_icon "chevron-down", class: "icon-chevron-down"

        .sell-content
          %h3.sell-content__head 配送について
          .sell-content__formbox
            .form-group#first
              = f.label :shipping_cost, "配送量の負担"
              %span.form-require 必須
              %br
              .select-wrap
                = f.select :shipping_cost,cost_list, {prompt: "---"},{class: "select-default"}
                = fa_icon "chevron-down", class: "icon-chevron-down"

            .form-group.shipping_method
              = f.label :shipping_method, "配送の方法"
              %span.form-require 必須
              %br
              .select-wrap
                = f.select :shipping_method,method_list, {prompt: "---"},{class: "select-default"}
                = fa_icon "chevron-down", class: "icon-chevron-down"

            .form-group
              = f.label :shipping_from, "発送元の地域"
              %span.form-require 必須
              %br
              .select-wrap
                = f.collection_select :shipping_from, JpPrefecture::Prefecture.all, :name, :name, {prompt: "---"}, { class: 'select-default'}
                = fa_icon "chevron-down", class: "icon-chevron-down"

            .form-group
              = f.label :shipping_date, "発送までの日数"
              %span.form-require 必須
              %br
              .select-wrap
                = f.select :shipping_date, days_list, {prompt: "---"},{class: "select-default"}
                = fa_icon "chevron-down", class: "icon-chevron-down"

        .sell-content
          %h3.sell-content__head 販売価格(300〜9,999,999)
          .sell-content__formbox
            %ul.sell-price
              %li.form-group#first
                .sell-price__contents
                  .sell-price__label
                    = f.label :price, "価格"
                    %span.form-require 必須
                  .sell-price__input
                    ￥
                    %div
                      = f.text_field :price, class: "input-default input-with-margin",placeholder: "例）300"

              %li
                .sell-price__tax
                  .left-side 販売手数料(10%)
                  .right-side -

              %li
                .sell-price__tax#profit
                  .left-side.left-side--bold 販売利益
                  .right-side.right-side--bold ー

        .sell-content
          %div
            %p
              %a<> 禁止されている出品
              、
              %a<> 行為
              を必ずご確認ください。
            %p
              またブランド品でシリアルナンバー等がある場合はご記載ください。
              %a<> 偽ブランド
              の販売は犯罪であり処罰される可能性があります。
            %p
              また、出品をもちまして
              %a<> 加盟店規約
              に同意したことになります。
          = f.submit "出品する", class: "red-submit-btn"
          %a.grey-cancel-btn もどる
  = render 'shared/single_footer'

