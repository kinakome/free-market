.default-container
  = render 'shared/global_header'
  .breadcrumbs-wrapper
    - breadcrumb :mypage
    = breadcrumbs style: :ul, separator: '>'
  .common-container
    .mypage-content
      .mypage-content__user-icon
        = link_to "" do
          %figure
            = image_tag "//static-mercari-jp-imgtr2.akamaized.net/images/member_photo_noimage_thumb.png", width: 60
          %h2
            = current_user.nickname
          .mypage-content__number
            .mypage-content__number__item
              評価
              %span 0
            .mypage-content__number__item
              出品数
              %span 0
      .mypage-tab-container.mypage-tab-container--notification
        %ul.mypage-tabs#news-tab
          %li.active
            %h3
              お知らせ
          %li
            %h3
              やることリスト
        .mypage-tab-content
          %ul.mypage-tab-panel#news-menu
            %li.mypage-tab-panel-list.active
              %ul
                - 5.times do
                  %li
                    = link_to "", class: "mypage-item-link" do
                      %figure
                        = image_tag "//static-mercari-jp-imgtr2.akamaized.net/images/mercari_profile.png", width: 48
                      .mypage-item-link__body
                        %span  【あと2日】対象カテゴリーが売れたら“必ず“ポイントがもらえるキャンペーン開催中
                        .mypage-date
                          = fa_icon "clock-o"
                          2日前
                      .right-icon
                        = fa_icon "chevron-right"
                %li.mypage-go-list
                  = link_to "" , class: 'mypage-go-link' do
                    一覧を見る
            %li.mypage-tab-panel-list.mypage-item-not-found
              過去に取引した商品がありません

      .mypage-tab-container
        %h2.mypage-tab-head 購入した商品
        %ul.mypage-tabs#product-tab
          %li.active
            %h3
              取引中
          %li
            %h3
              購入した商品
        .mypage-tab-content
          %ul.mypage-tab-panel#product-menu
            %li.mypage-tab-panel-list.mypage-item-not-found.active
              取引中の商品がありません
            %li.mypage-tab-panel-list.mypage-item-not-found
              過去に取引した商品がありません


